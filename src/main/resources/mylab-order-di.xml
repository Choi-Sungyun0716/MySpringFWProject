<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="product1" class="assignment.order.di.xml.Product">
		<!-- constructor injection -->
		<constructor-arg name="id" value="P001" />
		<constructor-arg name="name" value="노트북" />
		<constructor-arg name="price" value="150000" />
	</bean>

	<bean id="product2" class="assignment.order.di.xml.Product">
		<!-- constructor injection -->
		<constructor-arg name="id" value="P002" />
		<constructor-arg name="name" value="스마트폰" />
		<constructor-arg name="price" value="800000" />
	</bean>

	<bean id="shoppingCart" class="assignment.order.di.xml.ShoppingCart">
		<property name="products">
			<list>
				<ref bean="product1" />
				<ref bean="product2" />
			</list>
		</property>

	</bean>
	
	<bean id="orderService" class="assignment.order.di.xml.OrderService" />
</beans>
